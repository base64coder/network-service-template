<?xml version="1.0" encoding="UTF-8"?>
<extension>
    <id>http-extension</id>
    <name>HTTP REST Protocol Extension</name>
    <version>1.0.0</version>
    <author>Network Service Template</author>
    <description>HTTP REST protocol extension for handling HTTP requests and responses</description>
    <priority>60</priority>
    <start-priority>1000</start-priority>
    <main-class>com.dtc.http.HttpExtension</main-class>
    <dependencies>
        <dependency>core</dependency>
    </dependencies>
    <configuration>
        <property name="enabled" value="true" />
        <property name="port" value="8080" />
        <property name="protocol-name" value="HTTP" />
        <property name="max-connections" value="1000" />
        <property name="request-timeout" value="30000" />
        <property name="cors-enabled" value="true" />
        <property name="cors-origins" value="*" />
        <property name="cors-methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <property name="cors-headers" value="Content-Type, Authorization" />
        <property name="rate-limit-enabled" value="true" />
        <property name="rate-limit-max-requests" value="100" />
        <property name="rate-limit-window-ms" value="60000" />
        <property name="auth-enabled" value="true" />
        <property name="public-paths" value="/,/health,/status,/api/info" />
        <property name="admin-paths" value="/api/admin" />
    </configuration>
</extension>